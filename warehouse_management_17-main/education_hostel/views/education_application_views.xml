<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Inherited view form -->
    <record id="education_application_view_form" model="ir.ui.view">
        <field name="name">
            education.application.view.form.inherit.education.hostel
        </field>
        <field name="model">education.application</field>
        <field name="inherit_id"
               ref="education_core.education_application_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='contact_info']" position="after">
                <group string="Hostel">
                    <field name="need_hostel"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
